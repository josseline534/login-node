<%- include('./partials/_header.ejs'); -%>
<div class="container">
    <div class="col-sm-6 mx-auto">
        <div class="card mt-5">
            <div class="card-body">
                <h1 class="text-center"><i class="fas fa-sign-in-alt"></i> Registrarse</h1>
                <% if ( message.length > 0){ %>
                    <div class="alert alert-danger">
                        <%= message %>
                    </div>
                <% } %>
                <!--Formularion ingresar-->
                <form action="/register" method="post">
                    <div class="form-group">
                        <label for="email">Correo Electrónico: </label>
                        <input type="email" name="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña: </label>
                        <input type="password" name="password" class="form-control">
                    </div>
                    <input type="submit" class="btn btn-dark btn-lg form-control">
                </form>
                <hr>
                <div class="text-center">
                    <a href="/login"><i class="fas fa-user-circle"></i> Ingresar</a>
                    <hr>
                    <a href="/"><i class="fas fa-user-lock"></i> Inicio</a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/_footer.ejs'); -%>